  <div class="card">
    <h1>üéµ Lecture audio NFC</h1>
    <p id="status">Tentative de lecture automatique du fichier audio...</p>

    <!-- üîä Remplace le lien ci-dessous par ton fichier MP3 -->
    <audio id="player" controls playsinline preload="auto"
      src="src="https://www.dropbox.com/scl/fi/n31tms5eybaespxurba7p/Antonio-Vivaldi-Allegro-non-molto-from-Winter-from-The-Four-Seasons.mp3?rlkey=iebe0o5wgdo2dg3p3q52lxnpc&st=pztzyuf9&dl=1""></audio>

    <button id="playButton">‚ñ∂Ô∏è Appuyer pour lancer l‚Äôaudio</button>
    <small>Si la lecture automatique est bloqu√©e, appuyez sur le bouton.</small>
  </div>

  <script>
    const player = document.getElementById('player');
    const playBtn = document.getElementById('playButton');
    const status = document.getElementById('status');

    async function tryPlay() {
      try {
        await player.play();
        status.textContent = 'Lecture en cours ‚Äî profitez du son üé∂';
        playBtn.style.display = 'none';
      } catch (err) {
        status.textContent = 'Lecture automatique bloqu√©e. Appuyez sur le bouton pour lancer le son.';
        playBtn.style.display = 'inline-block';
      }
    }

    // Lancer automatiquement √† l‚Äôouverture de la page
    window.addEventListener('load', tryPlay);

    // Si autoplay est bloqu√©, lecture manuelle
    playBtn.addEventListener('click', async () => {
      try {
        await player.play();
        status.textContent = 'Lecture en cours ‚Äî merci !';
        playBtn.style.display = 'none';
      } catch (e) {
        status.textContent = 'Erreur lors du d√©marrage : ' + (e.message || e);
      }
    });
  </script>
